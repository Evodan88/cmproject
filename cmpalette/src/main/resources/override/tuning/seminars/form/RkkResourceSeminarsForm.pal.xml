<?xml version='1.0' encoding='UTF-8'?>
<ui xmlns="http://www.intertrust.ru/schema/palette/tn-ui">
  <directories>
    <by-key  key="Место проведения" id="Spot" name="${Spot:Место проведения}" />
    <by-key  key="Ведущий" id="Leader" name="${Leader:Ведущий}" />
    <by-key  key="Участник" id="Entrant" name="${Entrant:Участник}" />
  </directories>
  <form schema-ref="RkkResourceSeminars" id="RkkResourceSeminarsForm" projection="default" showtabs="true">

  <properties>
      <hide condition-union="AND">
        <negative-condition-ref ref="edit" />
        <negative-condition-ref ref="read" />
      </hide>
    </properties>
    <component>
      <section id="Header">
        <component>
          <section group="true" id="row1">
            <component>
              <field attribute-ref="showIdent">
                <properties>
                  <read-only condition-union="AND">
                    <condition>true</condition>
                  </read-only>
                </properties>
                <appearance importance="normal" align="left">
                  <label-style field-unit="symbol" field-width="15" />
                  <alt-appearancies>
                    <alt-appearance>
                      <appearance-ref ref="css_headerElementWithIcon" />
                      <enable condition-union="AND">
                        <condition>true</condition>
                      </enable>
                    </alt-appearance>
                  </alt-appearancies>
                </appearance>
              </field>

              <!--
              <field attribute-ref="showType">
                <properties>
                  <read-only condition-union="AND">
                    <condition>true</condition>
                  </read-only>
                </properties>
                <appearance importance="normal" align="left">
                  <label-style field-unit="symbol" field-width="15" />
                  <alt-appearancies>
                    <alt-appearance>
                      <appearance-ref ref="css_headerElementWithIcon" />
                      <enable condition-union="AND">
                        <condition>true</condition>
                      </enable>
                    </alt-appearance>
                  </alt-appearancies>
                </appearance>
              </field>
              -->

            </component>
            <appearance>
              <alt-appearancies>
                <alt-appearance>
                  <appearance-ref ref="horizontalSection" />
                  <enable condition-union="AND">
                    <condition>true</condition>
                  </enable>
                </alt-appearance>
              </alt-appearancies>
            </appearance>
          </section>
          <section group="true" id="row2">
            <component>
              <field attribute-ref="$preparationStatusInfo">
                <properties>
                  <read-only condition-union="AND">
                    <condition>true</condition>
                  </read-only>
                </properties>
                <appearance importance="normal" align="right">
                  <label-style field-unit="symbol" field-width="13" />
                  <alt-appearancies>
                    <alt-appearance>
                      <appearance-ref ref="rightAlign" />
                      <enable condition-union="AND">
                        <condition>true</condition>
                      </enable>
                    </alt-appearance>
                  </alt-appearancies>
                </appearance>
              </field>
              <field attribute-ref="$approvStatusInfo">
                <properties>
                  <read-only condition-union="AND">
                    <condition>true</condition>
                  </read-only>
                </properties>
                <appearance importance="normal" align="right">
                  <label-style field-unit="symbol" field-width="16" />
                  <alt-appearancies>
                    <alt-appearance>
                      <appearance-ref ref="rightAlign" />
                      <enable condition-union="AND">
                        <condition>true</condition>
                      </enable>
                    </alt-appearance>
                  </alt-appearancies>
                </appearance>
              </field>
              <field attribute-ref="approveAddStateText">
                <properties>
                  <read-only condition-union="AND">
                    <condition>true</condition>
                  </read-only>
                  <hide condition-union="AND">
                    <negative-condition-ref ref="Actions_approveAddStateTextNotIsEmpty" />
                  </hide>
                </properties>
                <appearance importance="normal" align="right" />
              </field>
              <field attribute-ref="$reviewStatusInfo">
                <properties>
                  <read-only condition-union="AND">
                    <condition>true</condition>
                  </read-only>
                  <hide condition-union="AND">
                    <negative-condition-ref ref="Registrated_RKK" />
                  </hide>
                </properties>
                <appearance importance="normal" align="right">
                  <label-style field-unit="symbol" field-width="15" />
                  <alt-appearancies>
                    <alt-appearance>
                      <appearance-ref ref="rightAlign" />
                      <enable condition-union="AND">
                        <condition>true</condition>
                      </enable>
                    </alt-appearance>
                  </alt-appearancies>
                </appearance>
              </field>
            </component>
            <appearance field-layout="horizontal" />
          </section>
          <field attribute-ref="$titleHeader">
            <properties>
              <require condition-union="AND">
                <condition>true</condition>
              </require>
              <hide condition-union="AND">
                <negative-condition-ref ref="read" />
              </hide>
            </properties>
            <appearance importance="normal">
              <label-style>
                <style id="tunFontSize14" />
                <style id="tunClickableUnderline" />
              </label-style>
              <field-style>
                <value-style>
                  <style id="tunFontSize14" />
                  <style id="tunClickableUnderline" />
                </value-style>
              </field-style>
            </appearance>
            <!--
            <hint-in-field>${ui.form.RkkResourceSeminarsForm.section.Header.field.titleHeader.hintInField:Введите заголовок документа}</hint-in-field>
           -->
            <directories manual-input="true">
              <directory-ref ref="subject" />
            </directories>
          </field>
          <field attribute-ref="$titleHeader">
            <properties>
              <require condition-union="AND">
                <condition>true</condition>
              </require>
              <hide condition-union="AND">
                <negative-condition-ref ref="edit" />
              </hide>
            </properties>
            <appearance importance="normal">
              <label-style>
                <style id="tunFontSize14" />
              </label-style>
              <field-style>
                <value-style>
                  <style id="tunFontSize14" />
                </value-style>
              </field-style>
            </appearance>
            <!--
            <hint-in-field>${ui.form.RkkResourceSeminarsForm.section.Header.field.titleHeader.hintInField:Введите заголовок документа}</hint-in-field>
            -->
            <directories manual-input="true">
              <directory-ref ref="subject" />
            </directories>
          </field>
          <section id="row3" group="true">

            <appearance field-layout="horizontal"/>
            <component>

              <field attribute-ref="control.deadline">
                <appearance align="left" importance="normal">
                  <label-style field-width="30" field-unit="symbol"/>
                </appearance>
              </field>
              <field recalc="true" attribute-ref="control">
                <appearance location="subform" align="left" importance="normal">
                  <label-style field-width="30" field-unit="symbol"/>
                </appearance>
              </field>
            </component>

          </section>
        </component>
      </section>

      <section name="${ui.form.RkkResourceSeminarsForm.section.Attributes.name:Описание}" id="Attributes">
        <component>

<!--
          <field attribute-ref="test1" name="${ui.form.RkkResourceSeminarsForm.section.Attributes.field.test1.name:Тест 1}">
            <directories>
              <directory-ref ref="Spot" />
            </directories>
          </field>
          <field attribute-ref="test2" name="${ui.form.RkkResourceSeminarsForm.section.Attributes.field.test2.name:Тест 2}" />
          <section group="true" id="fhghh">
            <component>
              <field attribute-ref="test3" name="${ui.form.RkkResourceSeminarsForm.section.Attributes.section.fhghh.field.test3.name:Тест 2}" />
              <field attribute-ref="test4" name="${ui.form.RkkResourceSeminarsForm.section.Attributes.section.fhghh.field.test4.name:Тест 2}" />
            </component>
            <appearance field-layout="horizontal" />
          </section>

-->
          <field attribute-ref="nameSem" name="${ui.form.RkkResourceSeminarsForm.section.Attributes.field.nameSem.name:Название:}"/>
          <field attribute-ref="author" name="${ui.form.RkkResourceSeminarsForm.section.Attributes.field.author.name:Ведущий:}">
            <directories>
              <directory-ref ref="Leader" />
            </directories>
          </field>
          <field attribute-ref="participants" name="${ui.form.RkkResourceSeminarsForm.section.Attributes.field.participants.name:Участники:}">
            <directories>
              <directory-ref ref="Entrant" />
            </directories>
          </field>
          <field attribute-ref="place" name="${ui.form.RkkResourceSeminarsForm.section.Attributes.field.place.name:Место проведения:}">
            <directories>
              <directory-ref ref="Spot" />
            </directories>

          </field>
          <field attribute-ref="datatime" name="${ui.form.RkkResourceSeminarsForm.Attributes.field.datatime.name:Дата/Время проведения:}"/>
          <field attribute-ref="materials" name="${ui.form.RkkResourceSeminarsForm.Attributes.field.materials.name:Материалы семинара:}"/>


        </component>
      </section>
      <section id="Links" name="${ui.form.RkkResourceSeminarsForm.section.Links.name:Материалы}">
        <appearance widget="leftMenu"/>
        <component>
          <section id="Review" name="${ui.form.RkkResourceSeminarsForm.section.Links.section.Review.name:Обсуждения}"/>
          <section id="Review" name="${ui.form.RkkResourceSeminarsForm.section.Links.section.Review.name:Согласования}"/>
        </component>
      </section>
    </component>
    <appearance widget="tabs" />
  </form>

</ui>



